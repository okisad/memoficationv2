<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="6dp"
    card_view:cardElevation="10dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/blue_grey_50"
        android:minHeight="600dp"
        android:orientation="vertical"
        android:weightSum="1">

        <LinearLayout
            android:id="@+id/word_card_card_layout_main_word_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.2"
            android:weightSum="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/word_card_card_layout_order_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:gravity="right"
                android:text="1/50"
                android:textSize="20sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/word_card_card_layout_main_word_text"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Main Word"
                android:textColor="@color/black"
                android:textSize="30sp"
                android:textStyle="bold"/>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1"
            android:alpha="1"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/left_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/word_card_i_dont_know"
                />

            <ImageView
                android:id="@+id/right_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/word_card_i_dont_know"
                />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/word_card_card_layout_top_linear_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.35"
            android:orientation="horizontal"
            >

            <Button
                android:id="@+id/word_card_card_layout_first_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="15dp"
                android:layout_weight="1"
                android:background="@drawable/word_card_default_choice_background"
                android:gravity="center"
                android:text="first"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="20sp"/>

            <Button
                android:id="@+id/word_card_card_layout_second_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="15dp"
                android:layout_weight="1"
                android:background="@drawable/word_card_default_choice_background"
                android:gravity="center"
                android:text="second"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="20sp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/word_card_card_layout_bottom_linear_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.35"
            android:orientation="horizontal">

            <Button
                android:id="@+id/word_card_card_layout_third_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="15dp"
                android:layout_weight="1"
                android:background="@drawable/word_card_default_choice_background"
                android:gravity="center"
                android:text="third"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="20sp"/>

            <Button
                android:id="@+id/word_card_card_layout_fourth_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="15dp"
                android:layout_weight="1"
                android:background="@drawable/word_card_default_choice_background"
                android:gravity="center"
                android:text="fourth"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="20sp"/>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>